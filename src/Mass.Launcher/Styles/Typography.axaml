<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Font Sizes -->
    <x:Double x:Key="FontSizeXS">11</x:Double>
    <x:Double x:Key="FontSizeSM">12</x:Double>
    <x:Double x:Key="FontSizeMD">14</x:Double>
    <x:Double x:Key="FontSizeLG">16</x:Double>
    <x:Double x:Key="FontSizeXL">20</x:Double>
    <x:Double x:Key="FontSize2XL">24</x:Double>
    <x:Double x:Key="FontSize3XL">32</x:Double>
    
    <!-- Spacing -->
    <x:Double x:Key="SpaceXS">4</x:Double>
    <x:Double x:Key="SpaceSM">8</x:Double>
    <x:Double x:Key="SpaceMD">12</x:Double>
    <x:Double x:Key="SpaceLG">15</x:Double>
    <x:Double x:Key="SpaceXL">20</x:Double>
    <x:Double x:Key="Space2XL">24</x:Double>
    
    <!-- Border Radius -->
    <CornerRadius x:Key="RadiusSM">4</CornerRadius>
    <CornerRadius x:Key="RadiusMD">8</CornerRadius>
    <CornerRadius x:Key="RadiusLG">12</CornerRadius>
    
</ResourceDictionary>
