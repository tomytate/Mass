<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Mass.Launcher"
             xmlns:converters="using:Mass.Launcher.Converters"
             x:Class="Mass.Launcher.App"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/ColorPalette.axaml"/>
                <ResourceInclude Source="/Styles/Typography.axaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <local:ViewLocator x:Key="ViewLocator"/>
            <converters:BytesToGbConverter x:Key="BytesToGbConverter"/>
            <converters:BooleanToStarConverter x:Key="BooleanToStarConverter"/>
            <converters:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter"/>
            <converters:OperationLevelToBrushConverter x:Key="OperationLevelToBrushConverter"/>
        </ResourceDictionary>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/Controls.axaml"/>
    </Application.Styles>
</Application>
