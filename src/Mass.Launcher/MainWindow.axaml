<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Mass.Launcher.ViewModels"
        xmlns:views="using:Mass.Launcher.Views"
        xmlns:services="using:Mass.Launcher.Services"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Mass.Launcher.MainWindow"
        x:DataType="vm:ShellViewModel"
        Title="Mass Suite"
        Width="1200" Height="800"
        MinWidth="900" MinHeight="600"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True">

    <Window.Styles>
        <Style Selector="Button.nav-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.nav-button:pointerover">
            <Setter Property="Background" Value="{StaticResource BackgroundHoverBrush}"/>
        </Style>
        <Style Selector="Button.nav-button:pressed">
            <Setter Property="Background" Value="{StaticResource BackgroundTertiaryBrush}"/>
        </Style>
    </Window.Styles>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        
        <SplitView DisplayMode="CompactInline" 
                   IsPaneOpen="{Binding IsSidebarOpen}" 
                   OpenPaneLength="250" 
                   CompactPaneLength="60"
                   PaneBackground="Transparent">
            
            <SplitView.Pane>
                <Border Background="{StaticResource BackgroundSecondaryBrush}" Padding="10" BorderBrush="{StaticResource DividerBrush}" BorderThickness="0,0,1,0">
                    <StackPanel Spacing="10">
                        <StackPanel Spacing="4" Margin="0,10,0,30" Orientation="Horizontal" IsVisible="{Binding IsSidebarOpen}">
                            <TextBlock Text="MASS SUITE" FontWeight="Bold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text=" v1.0" FontSize="11" Opacity="0.5" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <!-- Fallback logo when closed -->
                        <TextBlock Text="MS" FontWeight="Bold" FontSize="20" Foreground="{StaticResource TextPrimaryBrush}" 
                                   HorizontalAlignment="Center"
                                   IsVisible="{Binding !IsSidebarOpen}" Margin="0,10,0,30"/>
                        
                        <!-- Navigation Buttons -->
                        <!-- Tooltips added for collapsed state -->
                        <Button Command="{Binding NavigateHomeCommand}" Classes="nav-button" ToolTip.Tip="Home">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ " FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[Home]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding NavigateProUsbCommand}" Classes="nav-button" ToolTip.Tip="ProUSB">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ’¾" FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[ProUSB]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding NavigateMassBootCommand}" Classes="nav-button" ToolTip.Tip="MassBoot">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ–¥ï¸" FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[MassBoot]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding NavigateWorkflowsCommand}" Classes="nav-button" ToolTip.Tip="Workflows">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="âš™ï¸" FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[Workflows]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
    
                        <Button Command="{Binding NavigateHealthCommand}" Classes="nav-button" ToolTip.Tip="Health">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="â¤ï¸" FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[Health]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
    
                        <Button Command="{Binding NavigateLogsCommand}" Classes="nav-button" ToolTip.Tip="Logs">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ“‹" FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[Logs]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
    
                        <Button Command="{Binding NavigateOperationsConsoleCommand}" Classes="nav-button" ToolTip.Tip="Operations">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="âš¡" FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[Operations]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
    
                        <Button Command="{Binding NavigateScriptingCommand}" Classes="nav-button" ToolTip.Tip="Scripting">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ“œ" FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[Scripting]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
                        
                        <Rectangle Height="1" Fill="{StaticResource DividerBrush}" Margin="0,15"/>
                        
                        <Button Command="{Binding NavigatePluginsCommand}" Classes="nav-button" ToolTip.Tip="Plugins">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="ðŸ”Œ" FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[Plugins]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding NavigateSettingsCommand}" Classes="nav-button" ToolTip.Tip="Settings">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="âš™ï¸" FontSize="16"/>
                                <TextBlock Text="{Binding Source={x:Static services:Localizer.Instance}, Path=[Settings]}" VerticalAlignment="Center" IsVisible="{Binding IsSidebarOpen}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </SplitView.Pane>

            <SplitView.Content>
                <!-- Main Content -->
                <Grid RowDefinitions="Auto,*">
                    <!-- Top Bar -->
                    <Border Grid.Row="0" Height="60" Background="{StaticResource BackgroundSecondaryBrush}" BorderBrush="{StaticResource DividerBrush}" BorderThickness="0,0,0,1" Padding="20,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                <Button Command="{Binding ToggleSidebarCommand}" Content="â˜°" Classes="icon-button" FontSize="18"/>
                                <TextBlock Text="{Binding CurrentView.Title, FallbackValue='Mass Suite'}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                            <Button Classes="icon-button" Content="ðŸ””"/>
                            <Button Classes="icon-button" Content="âš™ï¸" Command="{Binding NavigateSettingsCommand}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Content Area -->
                <TransitioningContentControl Grid.Row="1" Content="{Binding CurrentView}"/>

                <!-- Consent Dialog Overlay -->
                <Grid Grid.Row="0" Grid.RowSpan="2" 
                      Background="#AA000000" 
                      IsVisible="{Binding IsConsentDialogVisible}">
                    <ContentControl Content="{Binding ConsentDialog}" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                </Grid>

                <!-- Toast Notifications Overlay -->
                <!-- Use Canvas or just Grid with bottom/right alignment -->
                <Grid Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" IsHitTestVisible="False">
                     <ContentControl Content="{Binding Toast}">
                         <ContentControl.DataTemplates>
                             <DataTemplate DataType="vm:ToastViewModel">
                                 <views:ToastView/>
                             </DataTemplate>
                         </ContentControl.DataTemplates>
                     </ContentControl>
                </Grid>
            </Grid>
            </SplitView.Content>
        </SplitView>
    </Panel>
</Window>
