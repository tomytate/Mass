<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Mass.Launcher.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="350"
             x:Class="Mass.Launcher.Views.ConsentDialogView"
             x:DataType="vm:ConsentDialogViewModel"
             Width="500" Height="350">
    
    <Border Background="#1E1E1E" CornerRadius="12" BorderBrush="#333333" BorderThickness="1" Padding="30">
        <Grid RowDefinitions="Auto,*,Auto">
            <StackPanel Grid.Row="0" Spacing="10">
                <TextBlock Text="ðŸ“Š" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="Help Improve Mass Suite" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Spacing="15" Margin="0,20">
                <TextBlock Text="We would like to collect anonymous usage data to help us improve the application. This data is stored locally first and is completely transparent."
                           TextWrapping="Wrap"
                           Opacity="0.8"
                           LineHeight="22"/>
                
                <Grid ColumnDefinitions="*,*" Margin="0,10">
                    <StackPanel Grid.Column="0" Spacing="5">
                        <TextBlock Text="WE COLLECT:" FontWeight="Bold" Foreground="#10B981" FontSize="12"/>
                        <TextBlock Text="â€¢ Feature usage statistics" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="â€¢ Error reports &amp; crashes" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="â€¢ Performance metrics" FontSize="12" Opacity="0.7"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Spacing="5">
                        <TextBlock Text="WE DO NOT COLLECT:" FontWeight="Bold" Foreground="#EF4444" FontSize="12"/>
                        <TextBlock Text="â€¢ Personal information" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="â€¢ File names or contents" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="â€¢ System identifiers" FontSize="12" Opacity="0.7"/>
                    </StackPanel>
                </Grid>
                
                <TextBlock Text="You can change this setting at any time in Settings."
                           FontSize="11"
                           Opacity="0.5"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center">
                <Button Command="{Binding DeclineCommand}"
                        Content="No, Thanks"
                        Background="Transparent"
                        BorderBrush="#444444"
                        BorderThickness="1"
                        Padding="20,10"
                        CornerRadius="6"/>
                
                <Button Command="{Binding AcceptCommand}"
                        Content="Yes, I Agree"
                        Background="#6366F1"
                        Foreground="White"
                        Padding="30,10"
                        CornerRadius="6"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
