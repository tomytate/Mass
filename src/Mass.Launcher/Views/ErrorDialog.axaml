<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="Mass.Launcher.Views.ErrorDialog"
        Title="Error"
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="BorderOnly"
        ExtendClientAreaToDecorationsHint="True">

    <Border BorderBrush="#333333" BorderThickness="1" Background="#1E1E1E" CornerRadius="8">
        <Grid RowDefinitions="Auto,*,Auto" Margin="20">
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" 
                       FontSize="18" FontWeight="Bold" Foreground="#FF5555" />
            
            <TextBlock x:Name="MessageText" Grid.Row="1" TextWrapping="Wrap" 
                       Margin="0,15" Foreground="#CCCCCC" />
            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button x:Name="RetryButton" Content="Retry" Click="OnRetryClick" IsVisible="False"
                        Background="#444444" Foreground="White"/>
                <Button Content="Close" Click="OnCloseClick" 
                        Background="#FF5555" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
