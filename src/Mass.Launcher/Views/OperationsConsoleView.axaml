<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Mass.Launcher.ViewModels"
             x:Class="Mass.Launcher.Views.OperationsConsoleView"
             x:DataType="vm:OperationsConsoleViewModel">
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="20,20,20,10">
            <TextBlock Text="OPERATIONS CONSOLE" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Clear" Command="{Binding ClearCommand}" Padding="10,5"/>
            <CheckBox IsChecked="{Binding AutoScroll}" Content="Auto-scroll" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Background="{StaticResource BackgroundPrimaryBrush}" CornerRadius="{StaticResource RadiusMD}" Margin="{StaticResource SpaceXL}">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Operations}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="{StaticResource SpaceMD},8" BorderBrush="{StaticResource DividerBrush}" BorderThickness="0,0,0,1">
                                <Grid ColumnDefinitions="Auto,*">
                                    <StackPanel Grid.Column="0" Width="180">
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}" 
                                                   FontFamily="Consolas" 
                                                   FontSize="11" 
                                                   Opacity="0.6"/>
                                        <TextBlock Text="{Binding Operation}" 
                                                   FontFamily="Consolas" 
                                                   FontSize="11" 
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <Border Background="{Binding Level, Converter={StaticResource OperationLevelToBrushConverter}}"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                HorizontalAlignment="Left"
                                                Margin="0,0,0,5">
                                            <TextBlock Text="{Binding Status}" 
                                                       FontSize="10" 
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                        <TextBlock Text="{Binding Message}" 
                                                   TextWrapping="Wrap"
                                                   FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
